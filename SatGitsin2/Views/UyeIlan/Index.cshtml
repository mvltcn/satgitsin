@model IEnumerable<SatGitsin2.Models.Ilan>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>İlan</h2>


    <p>
        @Html.ActionLink("Yeni Oluştur", "Create")
    </p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Kategori.KategoriAdi)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Baslik)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ozellik)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Foto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tarih)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Gorulme)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fiyat)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Kategori.KategoriAdi)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Baslik)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ozellik)
        </td>
        <td>
            <img width="75" src="@item.Foto" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tarih)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Gorulme)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fiyat)
        </td>
        @if (Convert.ToInt32(Session["uyeid"]) == item.UyeId)
        {       

        <td>
            @Html.ActionLink("Düzenle", "Edit", new { id = item.IlanId }) |
            @Html.ActionLink("Sil", "Delete", new { id = item.IlanId })
        </td>
        }
    </tr>
    }

</table>